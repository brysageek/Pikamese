<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pikamese.MainPage"
             Title="Connections">

    <StackLayout 
        BindingContext="{Binding MainViewModel, Source={StaticResource Locator}}">
        <Button Text="Create new" Command="{Binding NavigationConnectionPage}"/>
<!-- Place new controls here -->
        <ListView ItemsSource="{Binding Connections}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="5,5">
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding HostName}"/>
                            <Label Text="{Binding Port}"/>
                            <Label Text="{Binding VirtualHost}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
